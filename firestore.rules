rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. ZONA PÚBLICA (La solución)
    // Permitimos que CUALQUIERA (incluso sin loguearse) busque usuarios.
    match /users/{userId} {
      allow read, list: if true;
      allow write: if request.auth != null;
    }

    // 2. ZONA PRIVADA (Seguridad)
    // El resto (gastos, proyectos) sigue protegido.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}